{
  "name": "labautoorderingapp",
  "version": "1.2.1",
  "description": "LabGolf 자동주문 프로그램",
  "main": "src/index.js",
  "bin": "launcher.js",
  "scripts": {
    "start": "node src/index.js",
    "server": "node src/server.js",
    "build": "npx pkg launcher.js --targets node18-win-x64 --output dist/LAB자동주문.exe && cp dist/LAB자동주문.exe dist/release/LAB자동주문.exe",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "scripts": ["src/**/*.js"],
    "assets": [
      "public/**/*",
      "node_modules/iconv-lite/encodings/**/*",
      "node_modules/iconv-lite/lib/**/*",
      ".env"
    ],
    "targets": ["node18-win-x64"],
    "outputPath": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
